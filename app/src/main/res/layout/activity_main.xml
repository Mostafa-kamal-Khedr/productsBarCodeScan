<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:background="@color/colorPrimaryDark"
    android:layout_height="match_parent"
    tools:context=".ui.activity.MainActivity">


    <!-- Frame to load Home Fragments -->
    <FrameLayout
        android:id="@+id/home_fl_activity_frame_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_above="@+id/home_bn_home_bottom_nav"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_scrollFlags="scroll|exitUntilCollapsed" />

    <!-- Home Activity Bottom Navigation -->
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/home_bn_home_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@drawable/shape_white_top_tweenty_redius_bottom_nav"
        android:foreground="?attr/selectableItemBackground"
        app:itemBackground="?android:attr/windowBackground"
        app:layout_anchorGravity="bottom"
        app:layout_scrollFlags="scroll|enterAlways"
        app:menu="@menu/bottomnavigation_menu" />

    <RelativeLayout
        android:id="@+id/rl_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_home"
            android:text="home" />

    </RelativeLayout>
</RelativeLayout>
